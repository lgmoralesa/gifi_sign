<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Resume", new_resumee_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @resumees.each do |resumee| %>

         <tr>
            <td><%= resumee.name %></td>
            <td><%= link_to "Download Resume", resumee.attachment_url %></td>
            <td><%= button_to "Delete",  resumee, method: :delete,data:{ confirm: "Are you sure that you wish to delete #{resumee.name}?" }, class: "btn btn-danger" %></td>
         </tr>

      <% end %>
      <div class="field">
  <%= label_tag 'projects' %><br />

</div>
   </tbody>

</table>
