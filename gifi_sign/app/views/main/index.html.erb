<br/>

<div class ="container text-center"   >
  <div class ="row">
  
  <% if logged_in? %>
    <div class ="col-sm-3 well">
      <div class ="myBackground"><p id = "ent">Mi Cuenta</p>
      </div>
      <div>
        <div class ="well" align="left">
          <br/>
          <%= link_to "Perfil", current_user %>
          <br/><br/>
          <p>¿Deseas salir de tu cuenta?</p>
          <br/>
          <%= link_to "Salir", logout_path, method: "delete", class: "btn btn-danger myButton" %>
        </div>
      </div>
    </div>
  <% else %>  
    <div class ="col-sm-3 well">
      <div class ="myBackground"><p id = "ent">Entrar</p>
      </div>
      <div>

        <div class ="well" align="left">
          <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.text_field :email, placeholder: 'Ingrese su correo', class: 'form-control' %>
            <br>
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: 'Ingrese su contraseña', class: 'form-control' %>
            <br>
            <%= f.submit "Acceder", class: 'btn btn-success myButton' %>
          <% end %>
          <br/><br/>
          <p>Si eres usuario nuevo:</p>
          <br/>
          <%= link_to "Sign up", signup_path, class: "btn btn-primary myButton" %>
        </div>
      </div>
    </div>
  <% end %>

