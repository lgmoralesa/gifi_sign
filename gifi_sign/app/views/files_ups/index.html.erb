<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Resume", new_files_up_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
      <tr>
        <thead>.
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @files_ups.each do |file_up| %>

         <tr>
            <td><%= file_up.name %></td>
            <td><%= link_to "Download Resume", file_up.attachment_url %></td>
            <td><%= button_to "Delete",  file_up, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{file_up.name}?" %></td>
         </tr>

      <% end %>
   </tbody>

</table>
